                    </div>
                </div>
            </nav>
            <!-- Page Content-->
            <section class="py-5">
                <div class="container px-5 my-5">
                    <div class="text-center mb-5">
                        <h1 class="fw-bolder"><%= posts[0].street %></h1>
                        <p class="lead fw-normal text-muted mb-0"><%= posts[0].city %>, <%= posts[0].state %> <%= posts[0].zipcode %></p>
                    </div>
                    <div class="row gx-5">
                        <div class="col-xl-8">
                            <!-- FAQ Accordion 1-->
                            <!-- <h2 class="fw-bolder mb-3">Account &amp; Billing</h2> -->
                            <div class="accordion mb-5" id="accordionExample">
                                <div class="accordion-item">
                                    <h3 class="accordion-header" id="headingOne"><button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">Apartment Information</button></h3>
                                    <div class="accordion-collapse collapse show" id="collapseOne" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                                        <div class="accordion-body">
                                            <ul class="list-unstyled mb-4">
                                                <li class="mb-2">
                                                    <i class="bi bi-check text-primary"></i>
                                                    <strong><%= posts[0].price %>/month</strong>
                                                </li>
                                                <li class="mb-2">
                                                    <i class="bi bi-check text-primary"></i>
                                                    <%= posts[0].bed %> Bedroom(s), <%= posts[0].bath %> Bathroom(s)
                                                </li>
                                                <li class="mb-2">
                                                    <i class="bi bi-check text-primary"></i>
                                                    Utilites Included: <%= posts[0].utilites %>
                                                </li>
                                                <li class="mb-2">
                                                    <i class="bi bi-check text-primary"></i>
                                                    Amenities Included: <%= posts[0].amenities %>
                                                </li>
                                                <li class="mb-2">
                                                    <i class="bi bi-check text-primary"></i>
                                                    Additional Information: <%= posts[0].additionalInfo %>
                                                </li>
                                                <li class="mb-2">
                                                    <i class="bi bi-check text-primary"></i> Contact
                                                    <%= posts[0].contactName %>: <%= posts[0].contactEmail %> | <%= posts[0].contactNumber %>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                <div class="accordion-item">
                                    <h3 class="accordion-header" id="headingTwo"><button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">Pros</button></h3>
                                    <div class="accordion-collapse collapse" id="collapseTwo" aria-labelledby="headingTwo" data-bs-parent="#accordionExample">
                                        <div class="accordion-body">
                                            <% if(posts[0].pros.length === 0){%>
                                                <p>There are no pros yet.</p>
                                                <%}else{%>
                                            <ul>
                                                <% for(let i=0; i<posts[0].pros.length; i++) {%>
                                                <li><span><strong><%=posts[0].pros[i].name%> </strong></span>
                                                    <span><%=posts[0].pros[i].comment%></span>
                                                </li>
                                                    <%}%>
                                            </ul>
                                            <%}%>
                                        </div>
                                    </div>
                                </div>
                                <div class="accordion-item">
                                    <h3 class="accordion-header" id="headingThree"><button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">Cons</button></h3>
                                    <div class="accordion-collapse collapse" id="collapseThree" aria-labelledby="headingThree" data-bs-parent="#accordionExample">
                                        <div class="accordion-body">
                                            <% if(posts[0].cons.length === 0){%>
                                                <p>There are no cons yet.</p>
                                                <%} else{%>
                                            <ul>
                                                <% for(let i=0; i<posts[0].cons.length; i++) {%>
                                                <li><span><strong><%=posts[0].cons[i].name%> </strong></span>
                                                    <span><%=posts[0].cons[i].comment%></span>
                                                </li>
                                                    <%}%>
                                            </ul>
                                            <%}%>
                                        </div>
                                    </div>
                                </div>
                                <div class="accordion-item">
                                    <h3 class="accordion-header" id="headingFour"><button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFour" aria-expanded="false" aria-controls="collapseFour">Schedule a Tour</button></h3>
                                    <div class="accordion-collapse collapse" id="collapseFour" aria-labelledby="headingFour" data-bs-parent="#accordionExample">
                                        <div class="accordion-body">
                                            <p><strong>Date: </strong><%= posts[0].tour.date %></p>
                                            <p><strong>Time: </strong><%= posts[0].tour.time %></p>
                                            <p>Scheduled by <%= posts[0].tour.scheduledBy%></p>
                                            <form action="/scheduleTour" method="post">
                                                <input type="hidden" name="postId" value="<%=posts[0]._id%>">
                                                <label for="">Who Scheduled the Tour:</label>
                                                <input type="text" name="name" required value="<%= user.local.firstName %> <%= user.local.lastName[0] %>.">
                                                <label for="">Date:</label>
                                                <input type="date" name="date" required>
                                                <label for="">Time:</label>
                                                <input type="time" name="time" required>
                                                <button class="btn btn-primary">Add</button>
                                            </form> 
                                        </div>
                                    </div>
                                </div>
                                <div class="accordion-item">
                                    <h3 class="accordion-header" id="headingFive"><button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFive" aria-expanded="false" aria-controls="collapseFive">Questions for the Broker/Landlord</button></h3>
                                    <div class="accordion-collapse collapse" id="collapseFive" aria-labelledby="headingFive" data-bs-parent="#accordionExample">
                                        <div class="accordion-body">
                                            <ul>
                                                <% if(posts[0].questions.length === 0){%>
                                                    <p>No questions here yet!</p>
                                                    <%}%>
                                                
                                                <% for(let i=0; i<posts[0].questions.length; i++) {%>
                                                    <li><span><strong><%=posts[0].questions[i].name%> </strong></span>
                                                        <span><%=posts[0].questions[i].question%></span>
                                                    </li>
                                                    <%}%>
                                            </ul>
                                            <form action="/questions" method="post">
                                                <label for="">Name</label>
                                                <input type="hidden" name="_id" value="<%=posts[0]._id%>">
                                                <input type="text" name="name" required value="<%= user.local.firstName %> <%= user.local.lastName[0] %>.">
                                                <div class="mt-3">
                                                    <textarea name="question" placeholder="Add a Question" id="" cols="60" rows="2" required></textarea>
                                                </div>
                                                <button type="submit" class="btn btn-primary">Add</button>
                                            </form> 
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div>
                                <h4>How do you feel about <%= posts[0].street %>?</h4>
                                <form action="/comments" method="post">
                                    <label for="">Name:</label>
                                    <input type="hidden" name="id" value="<%=posts[0]._id%>">
                                    <input type="text" name="name" required id="" value="<%=user.local.firstName%> <%=user.local.lastName[0]%>.">
                                    <label for="">Pro or Con?</label>
                                    <select name="commentType" required id="">
                                        <option value="">--choose--</option>
                                        <option value="pros">Pro</option>
                                        <option value="cons">Con</option>
                                    </select>
                                    <div>
                                        <textarea class="mt-4" name="comment" placeholder="...thoughts?" required id="" cols="60" rows="4"></textarea>
                                    </div>
                                        <button class="btn btn-primary">Add</button>
                                </form>
                            </div>
